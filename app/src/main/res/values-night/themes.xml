<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CropDiary" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.CropDiary.Auth" parent="Theme.CropDiary">
        <item name="android:textStyle">bold</item>
        <item name="editTextStyle">@style/Theme.CropDiary.EditText.Auth</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="buttonStyle">@style/Theme.CropDiary.button</item>
    </style>

</resources>