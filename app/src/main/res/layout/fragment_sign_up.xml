<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.Auth.SignInFragment">


    <EditText
        android:id="@+id/edTxEmailAddresSignUp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/edTxPasswordSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTxPasswordSignUp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/edTxRepeatPasswordSignUp"
        app:layout_constraintEnd_toEndOf="@+id/edTxEmailAddresSignUp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edTxEmailAddresSignUp"
        app:layout_constraintTop_toBottomOf="@+id/edTxEmailAddresSignUp" />

    <EditText
        android:id="@+id/edTxRepeatPasswordSignUp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="@string/repeat_your_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelSignUp"
        app:layout_constraintEnd_toEndOf="@+id/edTxPasswordSignUp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edTxPasswordSignUp"
        app:layout_constraintTop_toBottomOf="@+id/edTxPasswordSignUp" />

    <Button
        android:id="@+id/btnCancelSignUp"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_medium"
        android:backgroundTint="@color/white"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSignUp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTxRepeatPasswordSignUp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_medium"
        android:backgroundTint="@color/secondary_dark"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toBottomOf="@+id/btnCancelSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCancelSignUp"
        app:layout_constraintTop_toTopOf="@+id/btnCancelSignUp" />


</androidx.constraintlayout.widget.ConstraintLayout>