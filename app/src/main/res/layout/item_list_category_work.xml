<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <TextView
            android:id="@+id/tv_name_work_info"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:text="Nombre"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_name_work_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_work_content"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:inputType="textPersonName"
            android:minWidth="150dp"
            android:text="Name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_work_info"
            app:layout_constraintEnd_toStartOf="@+id/tv_ic_delete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_name_work_info"
            app:layout_constraintTop_toTopOf="@+id/tv_name_work_info" />

        <TextView
            android:id="@+id/tv_ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableStart="@android:drawable/ic_menu_delete"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_work_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_name_work_content"
            app:layout_constraintTop_toTopOf="@+id/tv_name_work_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>