<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_info_new_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2">

        <TextView
            android:id="@+id/tvTitleForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info new crop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNameNewCrop"
            app:layout_constraintEnd_toStartOf="@+id/editTextNameNewCrop"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextNameNewCrop" />

        <EditText
            android:id="@+id/editTextNameNewCrop"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:hint="Name"
            android:layout_marginTop="@dimen/dp_2"
            app:layout_constraintEnd_toStartOf="@+id/switch_add_category"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleForm" />

        <Switch
            android:id="@+id/switch_add_category"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="@dimen/dp_1"
            android:text="AÃ±adir labor"
            app:layout_constraintBottom_toBottomOf="@+id/editTextNameNewCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNameNewCrop"
            app:layout_constraintTop_toTopOf="@+id/editTextNameNewCrop" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Description"
            android:layout_marginTop="@dimen/dp_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNameNewCrop" />

        <EditText
            android:id="@+id/editTextNameDescriptioCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginVertical="@dimen/dp_2"
            android:layout_marginHorizontal="@dimen/dp_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>